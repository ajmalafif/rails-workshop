<h1>Store</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Serial Number</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
    <tr>
      <td><%= product.title %></td>
      <td><%= product.description %></td>
      <td><%= number_to_currency(product.price) %></td>
      <td><%= product.serial_number %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Go to homepage", root_path, class: "btn btn-success"  %>